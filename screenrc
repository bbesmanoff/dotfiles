# Start without message
startup_message off

# Use ZSH
shell /bin/zsh

# Set the $TERM varaible
term screen-256color

# Ensure that things like vim clear screen when exiting
altscreen on

# Set hardstatus bar
hardstatus alwayslastline
hardstatus string "%{wd}[%c:%s %D %M %d]%{-} %-w%{dw}(%n %t)%{-}%+w"

# Only display messages for one second
msgwait 1

# Configure scrolling
defscrollback 500
termcapinfo screen*|xterm* ti@:te@
