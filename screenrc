# Start without message
startup_message off

# Use ZSH
shell /bin/zsh

# Set the $TERM varaible
term screen-256color

# Xterm Title Bars
# http://www.tldp.org/HOWTO/Bash-Prompt-HOWTO/x395.html
# termcapinfo xterm* 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'

# Set hardstatus bar
hardstatus alwayslastline
hardstatus string "%{rd}[%c:%s %D %M %d]%{-} %-w%{wr}(%n %t)%{-}%+w"

# Only display messages for one second
msgwait 1
